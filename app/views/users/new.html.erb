<div class="row">
  <div class="col-md-12">

    <% if @user.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Sorry</h3>
      </div>
      <div class="panel-body">
        <ul class="error">
          <% @user.errors.messages.each do |key, msg| %>
          <li><%= msg.first %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>

    <div class="well bs-component">

      <%= form_for(:user, url: users_new_path, html: {class: "form-horizontal"}) do |f| %>
        <fieldset>
        <legend>Signup</legend>

        <div class="form-group">
          <label class="col-md-1 control-label">Username</label>
          <div class="col-md-11">
            <%= f.text_field :username, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-1 control-label">Email address</label>
          <div class="col-md-11">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label for="inputPassword" class="col-md-1 control-label">Password</label>
          <div class="col-md-11">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12">
            <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
          </div>
        </div>

        </fieldset>

      <% end %>

    </div>

  </div>
</div>
